#ifndef NODE_H_
#define NODE_H_
#include <string>
using namespace std;
struct edge
{
	unsigned int headindex;
	unsigned int tailindex;

	int weight;

	edge *next;

	edge(unsigned int headindex = 0u,
			unsigned int tailindex = 0u,
			int weight = 0) :
			headindex(headindex),
			tailindex(tailindex),
			weight(weight), next(NULL)
	{
	}
};

struct vertex
{
	string name;
	edge *first;

	vertex(string name) :
		name(name), first(NULL)
	{
	}
};

#endif /* NODE_H_ */
